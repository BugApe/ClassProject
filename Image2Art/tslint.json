{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "src/gen/**",
      "**/*.js"
    ]
  },
  "rules": {
    "indent": [true, "spaces", 4],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "double"],
    "member-access": [true, "no-public"],
    "whitespace": false
  }
}
